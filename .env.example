APP_ENV=local
APP_DEBUG=true
APP_KEY=
APP_TIMEZONE=UTC
LOG_CHANNEL=stderr

# ----------------------------------------
# Service URLs
# ----------------------------------------
FRONTEND_URL=http://localhost:3000
APP_URL=http://localhost:8000
REALTIME_URL=http://localhost:4000

