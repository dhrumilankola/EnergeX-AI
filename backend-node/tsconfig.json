{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "rootDir": ".",
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "types": ["node", "jest"]
    },
    "include": [
      "src/**/*.ts",
      "tests/**/*.ts"
    ],
    "exclude": [
      "dist",
      "node_modules"
    ]
  }